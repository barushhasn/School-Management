@page
@model School_Management.Pages.Clients.IndexModel
@{
}

<br />
<h2>List of Students</h2>
<a class="btn btn-primary btn-sm" href="/Students/Create">New Student</a>
<table>
    <thead>
        <tr>
            <th>Id</th>
            <th>FirstName</th>
            <th>MiddleName</th>
            <th>LastName</th>
            <th>Age</th>
            <th>Address</th>
            <th>Phone</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.studentInfos)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.FirstName</td>
                <td>@item.MiddleName</td>
                <td>@item.LastName</td>
                <td>@item.Age</td>
                <td>@item.Address</td>
                <td>@item.Phone</td>
                <td>
                    <a class="btn btn-primary btn-sm" href="/Students/Edit?id=@item.Id">Edit</a>
                    <a class="btn btn-danger btn-sm" href="/Students/Delete?id=@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>